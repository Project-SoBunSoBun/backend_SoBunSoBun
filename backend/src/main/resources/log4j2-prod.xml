<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <!-- 변수 정의 -->
    <Properties>
        <Property name="LOG_PATH">logs</Property>
        <Property name="LOG_FILE">sobunsobun</Property>
        <Property name="LOG_PATTERN">%d{ISO_OFFSET_DATE_TIME}{Asia/Seoul} [%thread] %-5level %logger{36} - %msg%n</Property>
    </Properties>

    <!-- Appenders 정의 -->
    <Appenders>
        <!-- 전체 로그 파일 (일별 롤링) -->
        <RollingFile name="File"
                     fileName="${LOG_PATH}/${LOG_FILE}.log"
                     filePattern="${LOG_PATH}/${LOG_FILE}-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="50MB"/>
            </Policies>
            <DefaultRolloverStrategy max="60"/>
        </RollingFile>

        <!-- 에러 로그만 별도 파일 -->
        <RollingFile name="ErrorFile"
                     fileName="${LOG_PATH}/${LOG_FILE}-error.log"
                     filePattern="${LOG_PATH}/${LOG_FILE}-error-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="50MB"/>
            </Policies>
            <DefaultRolloverStrategy max="60"/>
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>

        <!-- Warn 이상 로그만 콘솔 출력 (운영 환경) -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Filters>
                <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </Console>
    </Appenders>

    <!-- Loggers 정의 (운영 환경) -->
    <Loggers>
        <!-- 애플리케이션 로거 (INFO 레벨) -->
        <Logger name="com.sobunsobun.backend" level="info" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
            <AppenderRef ref="ErrorFile"/>
        </Logger>

        <!-- Spring Framework 로거 (WARN 레벨) -->
        <Logger name="org.springframework.web" level="warn" additivity="false">
            <AppenderRef ref="File"/>
            <AppenderRef ref="ErrorFile"/>
        </Logger>

        <Logger name="org.springframework.security" level="warn" additivity="false">
            <AppenderRef ref="File"/>
            <AppenderRef ref="ErrorFile"/>
        </Logger>

        <!-- Hibernate 로거 (WARN 레벨) -->
        <Logger name="org.hibernate" level="warn" additivity="false">
            <AppenderRef ref="File"/>
            <AppenderRef ref="ErrorFile"/>
        </Logger>

        <!-- Root Logger -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
            <AppenderRef ref="ErrorFile"/>
        </Root>
    </Loggers>
</Configuration>
